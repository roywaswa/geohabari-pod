<style lang="scss">
  @use "../styles/partials/combined.scss" as *;

  section.hero{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: $spacing-4 $spacing-6;
    align-self: stretch;
    flex-wrap: wrap;
    gap: $spacing-6;
    .hero-content{
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $spacing-3;
      width: clamp(300px, 45%, 1024px);
      .heading{
        text-align: center;
        line-height: 1.2;
        margin: 0;
      }
      .sub-heading{
        text-align: center;
        font-size: px-to-rem($h4-px);
        font-weight: 700;
        color: $black;
      }
      .cta-component {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        gap:$spacing-5;

        .cta-btn {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          border-radius: 0.5rem;
          background: $purple;
          border: none;
          padding: $spacing-3 $spacing-6;

          h5{
            font-size: clamp(px-to-rem($h6-px), 1.2rem, 1.5rem);
            color: $white;
            letter-spacing: 0.45rem;
            font-weight: 700;
            margin: 0;
          }
        }

        .secondary-cta {
          display: flex;
          flex-direction: row;
          align-items: flex-start;
          gap: $spacing-3;

          .platform {
            width: 48px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: $spacing-2;

            .icon {
              border-radius: $radius-full;
              overflow: hidden;
            }

            p{
              font-size: px-to-rem($a-sm-px);
              text-align: center;
              line-height: 1.0;
            }
          }
        }
      }
    }
    .hero-graphics{
      width: clamp(300px, 45%, 720px);

      .hero-image{
        width: 100%;
        height: auto;
        
      }
    }
  }

  section.introduction{
    display: flext;
    flex-direction: column;
    align-items: flex-start;
    gap: $spacing-7;
    align-self: stretch;
    padding: $spacing-4 $spacing-6;

    .brief, .purpose, .outro {
      color: $black;
      width: clamp(300px, 45%, 1024px);
    }
    .img-strip{
      display: flex;
      align-items: flex-start;
      gap: $spacing-3;
      width: 100%;
      overflow: hidden;
    }
  }

  section.topics{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: $spacing-4 $spacing-6;
    align-self: stretch;

    .topics-heading{
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
      align-self: stretch;
      gap: $spacing-4;

      h2 {
        width: clamp(30rem, 20vw, 300px);
        line-height: 1.4;
      }
      h5 {
        width: clamp(30rem, 20vw, 300px);
        font-weight:700;
      }
    }
    .container-themes{
      display: flex;
      align-items: flex-end;
      align-content: flex-end;
      gap: $spacing-4;
      align-self: stretch;
      flex-wrap: wrap;
    }
  }

  section.latestep{
    display:flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    .latestep_intro {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      width: clamp(300px, 30vw, 560px);
    }
    .latestep_player {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      width: clamp(320px, 50vw, 720px);

      .ep_details{
        display: flex;
        flex-direction: row;
        width:100%;
        gap: $spacing-4;

        .ep_image {
          width: 240px;
          height: 240px;
          border-radius: $radius-md;
          object-fit: cover;
        }


        .ep_info{
          display: flex;
          width: 100%;
          flex-direction: column;
          justify-content: flex-end;
          align-items: flex-start;
          gap: $spacing-2;
        }
      }
      .ep_player {

      }
    }
  }

  section.nextep{
    background: $purple;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    gap: $spacing-6;
    align-self: stretch;
    flex-wrap: wrap;

    .nextep_image {
      position: absolute;
      width: 240px;
      height: 240px;
      aspect-ratio: 1/1;
      z-index: 0;

      &.right{
        right:$spacing-2;
      }
      &.left{
        left:$spacing-2;
      }
    }

    .nextep_details{
      display: flex;
      width: clamp(300px, 30vw, 720px);
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      gap: $spacing-2;

      h5 {
        color: $white;
        margin: 0;
        font-weight: 700;
      }
      h6{
        font-size: px-to-rem($h6-px);
        color: $green;
      }
    }

    .nextep_guests {
      display: flex;
      align-items: center;
      gap: 44px;
    }

    .profile {
      display:flex;
      flex-direction: column;
      align-items: center;
      gap: $spacing-2;
      position: relative;
      z-index: 1;

      >.image{
        border-radius: $radius-full;
        object-fit: cover;
      }
      >.info{
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: $spacing-1;

        .name {
          font-size: px-to-rem($h6-px);
          font-weight: 700;
          margin: 0;
        }
        .title {
          font-size: px-to-rem($p-px);
          color: $white;
          margin: 0;
        }
      }
    }

  }

</style>
<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin(SplitText);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.set(".heading", { opacity: 1 });

    let split;
    SplitText.create(".heading", {
      type: "words,lines",
      linesClass: "line",
      autoSplit: true,
      mask: "lines",
      onSplit: (self) => {
        split = gsap.from(self.lines, {
          duration: 1.2,
          yPercent: 100,
          opacity: 0.78,
          stagger: 0.1,
          ease: "expo.out",
        });
        return split;
      }
    });
  });
</script>
